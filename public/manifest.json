{
  "name": "Yaaas Bot",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "The only extension you don't need",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/broad-city-logo.png",
      "24": "images/broad-city-logo.png",
      "32": "images/broad-city-logo.png"
    }
  },
  "icons": {
    "16": "images/broad-city-logo.png",
    "32": "images/broad-city-logo.png",
    "48": "images/broad-city-logo.png",
    "128": "images/broad-city-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["build/injection.js"]
    }
  ]
}
